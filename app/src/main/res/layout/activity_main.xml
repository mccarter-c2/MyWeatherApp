<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="60dp"
        android:text="Search"
        app:layout_constraintBottom_toTopOf="@+id/weather_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weather_txt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="176dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_chuck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSearch" />

    <EditText
        android:id="@+id/search_txt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="396dp"
        android:ems="10"
        android:hint="Search Location"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btnCureent"
        app:layout_constraintEnd_toStartOf="@+id/btnSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCureent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="27dp"
        android:text="Current Location"
        app:layout_constraintBottom_toTopOf="@+id/chuckText"
        app:layout_constraintEnd_toStartOf="@+id/btn_chuck"
        app:layout_constraintTop_toBottomOf="@+id/search_txt" />

    <TextView
        android:id="@+id/chuckText"
        android:layout_width="299dp"
        android:layout_height="178dp"
        android:layout_marginStart="149dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="16dp"
        android:text="Default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_chuck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCureent" />

    <Button
        android:id="@+id/btn_chuck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="29dp"
        android:text="Random City"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chuckText"
        app:layout_constraintTop_toBottomOf="@+id/weather_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>